{
  "name": "atcoder-helper",
  "displayName": "atcoder-helper",
  "description": "AtCoder helper extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "AtCoder Helper - General",
        "properties": {
          "atcoder-helper.language": {
            "order": 1,
            "type": "string",
            "default": "ko",
            "enum": [
              "ko",
              "en",
              "ja"
            ],
            "enumDescriptions": [
              "Korean (ÌïúÍµ≠Ïñ¥)",
              "English (ÏòÅÏñ¥)",
              "Japanese (Êó•Êú¨Ë™û)"
            ],
            "markdownDescription": "üåê Select the **display language** for the AtCoder Helper extension"
          }
        }
      },
      {
        "title": "AtCoder Helper - Translation",
        "properties": {
          "atcoder-helper.translationModel": {
            "order": 1,
            "type": "string",
            "default": "Gemini (Google AI)",
            "enum": [
              "Gemini (Google AI)",
              "ChatGPT (OpenAI)"
            ],
            "markdownDescription": "ü§ñ Select the **AI model** for problem translation. If the API key is not configured, Google Translate will be used as fallback."
          },
          "atcoder-helper.geminiApiKey": {
            "order": 2,
            "type": "string",
            "default": "",
            "markdownDescription": "üîë **Gemini API Key** for high-quality Korean translation. [Get your key here](https://aistudio.google.com/apikey)"
          },
          "atcoder-helper.openaiApiKey": {
            "order": 3,
            "type": "string",
            "default": "",
            "markdownDescription": "üîë **OpenAI API Key** for ChatGPT translation. [Get your key here](https://platform.openai.com/api-keys)"
          }
        }
      },
      {
        "title": "AtCoder Helper - Execution",
        "properties": {
          "atcoder-helper.timeoutSeconds": {
            "order": 1,
            "type": "number",
            "default": 10,
            "minimum": 1,
            "maximum": 60,
            "markdownDescription": "‚è±Ô∏è **Timeout** in seconds for each test case execution *(1-60s, default: 10s)*"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "atcoder-sidebar-view",
          "title": "AtCoder Helper",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "atcoder-sidebar-view": [
        {
          "type": "webview",
          "id": "atcoder.sidebar",
          "name": "AtCoder Menu"
        }
      ]
    },
    "commands": [
      {
        "command": "atcoder-helper.parseProblem",
        "title": "AtCoder: Parse Test Cases"
      },
      {
        "command": "atcoder-helper.runTest",
        "title": "AtCoder: Run Python Tests"
      },
      {
        "command": "atcoder-helper.createFile",
        "title": "AtCoder: Create Solution File"
      }
    ],
    "keybindings": [
      {
        "command": "atcoder-helper.runTest",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus && resourceExtname == .py"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "atcoder-helper.parseProblem",
          "group": "navigation",
          "when": "editorFocus"
        },
        {
          "command": "atcoder-helper.runTest",
          "group": "navigation",
          "when": "editorFocus && resourceExtname == .py"
        }
      ]
    },
    "problemMatchers": [
      {
        "name": "esbuild-watch",
        "owner": "esbuild",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*build started...",
          "endsPattern": "^\\s*build finished"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "google-translate-api-x": "^10.7.2"
  }
}